@model IEnumerable<Coivd_App.Models.Admin>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    <h2>Search users</h2>
    <div id="userSearch">
        @using (Html.BeginForm("SearchUsers", "Admin"))
        {
            <div class="form-group">
                @Html.Raw("First name:")
                <div class="col-md-10">
                    @Html.TextBox("FirstName")
                </div>
            </div>

            <div class="form-group">
                @Html.Raw("Last name:")
                <div class="col-md-10">
                    @Html.TextBox("LastName")
                </div>
            </div> 
               <div class="form-group">
                    @Html.Raw("City:")
                    <div class="col-md-10">
                        @Html.TextBox("City")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>
                }
            </div>
            <hr />

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AdminID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.AdminID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.AdminID })
                        </td>
                    </tr>
                }

            </table>
